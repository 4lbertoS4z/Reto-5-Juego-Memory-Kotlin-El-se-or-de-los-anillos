<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaVictoria">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/victoria"
        android:gravity = "center"
        android:scaleType="centerInside">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="La compañía logro reunirse a tiempo y pudieron seguir su viaje.\n
¿Qué les deparara en las profundidades de Moria?"
            android:textAlignment="center"
            android:textColor="#C5B73F"
            android:textStyle="bold"
            android:fontFamily="@font/firstp"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:shadowDx="20"
            android:shadowDy="50">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:text=""
            android:fontFamily="@font/firstp"
            android:textAlignment="center"
            android:textColor="#B80202"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:shadowDx="20"
            android:shadowDy="50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnReinicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Menu Principal"
            android:layout_gravity="center"
            android:fontFamily="@font/firstp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>