<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/interrogante">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton03"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:clickable="true"></ImageButton>



        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton04"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton05"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton06"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton07"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:clickable="true"></ImageButton>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton08"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton09"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:clickable="true"></ImageButton>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton15"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:clickable="true"></ImageButton>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton16"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton17"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton18"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton19"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:clickable="true"></ImageButton>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton20"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:clickable="true"></ImageButton>

            <ImageButton
                android:id="@+id/boton23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:clickable="true"></ImageButton>


        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_weight="110"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="110"
                android:progress="0"
                android:indeterminateTintMode="src_atop"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#C5B73F"
            android:fontFamily="@font/firstp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texto_puntuacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/firstp"
                android:textColor="#ECB511"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/texto_Movimientos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/firstp"
                android:textColor="#ECB511"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/texto_Parejas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/firstp"
            android:textColor="#ECB511"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>
        </LinearLayout>
    </TableLayout>

</LinearLayout>